{% extends 'base.html.twig' %}

{% block title %}Ajouter un utilisateur{% endblock %}
 {% block titrePage %}Ajouter un utilisateur{% endblock %}
{% block body %}
    <div>
        <div>
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
        </div>
        <div>
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username, {label: 'Pseudo'}) }}
            {{ form_row(registrationForm.firstname, {label: 'Prénom'}) }}
            {{ form_row(registrationForm.name, {label: 'Nom'}) }}
            {{ form_row(registrationForm.phone, {label: 'Téléphone'}) }}
            {{ form_row(registrationForm.email, {label: 'Email'}) }}
            {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
            {{ form_row(registrationForm.campus, {label: 'Campus'}) }}
            {{ form_row(registrationForm.administrator, {label: 'Administrateur'}) }}
            <div class="pt-4">
            <button type="submit" class="btn btn-secondary">Enregistrer</button>
            {{ form_end(registrationForm) }}
            </div>
        </div>
        <div class="pt-4 d-flex justify-content-end">
            <a class="text-dark" href="{{ path('admin_csv') }}">Ajout via fichier CSV</a>
        </div>
    </div>
{% endblock %}
