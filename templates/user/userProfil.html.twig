{% extends 'base.html.twig' %}

{% block title %}Affichage du profil de {{ profil.username }}{% endblock %}
 {% block titrePage %}{{ profil.username }}{% endblock %}
{% block body %}
    <div class="col">
        <div>
            <ul class="">
                <li class="row">Prénom {{ profil.firstname }}</li>
                <li class="row">Nom {{ profil.name }}</li>
                <li class="row">Téléphone {{ profil.phone }}</li>
                <li class="row">Email {{ profil.email }}</li>
            </ul>
        </div>
        <a href="{{ url('home_welcome') }}"
           class="btn btn-sm btn-outline-secondary">Retour</a>
    </div>
{% endblock %}